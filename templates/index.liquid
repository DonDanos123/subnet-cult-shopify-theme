<!-- Hero Section -->
<section class="hero">
  <div class="hero-content">
    <h1 class="glitch">SUBNET_CULT<span class="terminal-cursor">_</span></h1>
    <p class="hero-subtitle">> DIGITAL_PROPAGANDA_FOR_THE_CONNECTED_GENERATION</p>
    <a href="/collections/all" class="cta-button">ENTER_SYSTEM</a>
  </div>
</section>

<!-- Main Content -->
<div class="main-content">
  
  <!-- Featured Posters -->
  <section>
    <h2 class="section-title">FEATURED_POSTERS</h2>
    <div class="product-grid">
      {% for product in collections['posters'].products limit: 4 %}
        <div class="product-card">
          <a href="{{ product.url }}">
            {% if product.featured_image %}
              <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title | escape }}" class="product-image">
            {% else %}
              <div class="product-image" style="background: rgba(0,255,65,0.1); display: flex; align-items: center; justify-content: center;">
                [NO_IMAGE]
              </div>
            {% endif %}
            <h3 class="product-title">{{ product.title }}</h3>
            <p class="product-price">{{ product.price | money }}</p>
          </a>
          <form action="/cart/add" method="post">
            <input type="hidden" name="id" value="{{ product.variants.first.id }}">
            <button type="submit" class="cta-button" style="width: 100%;">ADD_TO_CART</button>
          </form>
        </div>
      {% else %}
        <p style="grid-column: 1/-1; text-align: center; opacity: 0.7;">NO_POSTERS_FOUND</p>
      {% endfor %}
    </div>
  </section>

